<!DOCTYPE html>
<html>
  <head>
    <title>InTuneD</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet">
  </head>

  <body>
    <header>
      <div class="logo">
        <%= image_tag "intune.png" %>
      </div>
      <% if logged_in?%>
        <a href="/user/<%= current_user.id %>"><h1 class="logo-text">InTune</h1></a>
      <% else %>
        <a href="/login"><h1 class="logo-text">InTune</h1></a>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
